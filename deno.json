{
  "importMap": "import.map.json",
  "tasks": {
    "generate": "deno run --allow-env --allow-read --allow-write=./generated --check --reload=npm:@iconify/json tasks/generate.ts",
    "list": "deno run --allow-env --allow-read --allow-write=./README.md --check --reload=npm:@iconify/json tasks/list.ts && deno fmt README.md",
    "test": "deno test --allow-read --allow-env --check",
    "publish": "deno run --allow-read --allow-env --allow-run --allow-write tasks/publish.ts"
  },
  "fmt": {
    "files": {
      "exclude": ["./generated/"]
    },
    "options": {
      "singleQuote": true,
      "indentWidth": 2,
      "useTabs": false
    }
  },
  "lint": {
    "files": {
      "exclude": ["./generated/"]
    }
  }
}
